{{#each erros}}
    <div class="notification is-danger is-light">
        {{ texto }}
    </div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-header has-background-light">
        <p class="card-header-title is-size-4">Nova categoria</p>
    </div>
    <div class="card-content">
        <form action="/admin/categorias/nova" method="post">
            <div class="control">
                <label for="nome">Nome: </label>
                <input class="input mb-2" type="text" id="nome" name="nome" 
                placeholder="Nome da categorias" autocomplete="off" value="{{ nome }}">
            </div>
            <div class="control">
                <label for="slug">Slug: </label>
                <input class="input mb-5" type="text" id="slug" name="slug" 
                placeholder="Slug da categorias" autocomplete="off" value="{{ slug }}">
            </div>
            <button type="submit" class="button is-info">Criar categoria</button>
        </form>
    </div>
</div>
